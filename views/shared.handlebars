<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Team Maker - Shared Team</title>
  <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.6.2/remarkable.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav><a href="/"><img id="logo" src="/assets/img/pokeball.png" alt="pokeball logo"/></a>
    <div class="navlink"><a href="/logout">Log out</a></div>
    <div class="navlink"><a href="/settings">Settings</a></div>
  </nav>
  <section id="teams">
    <div class="teamList">
      {{#if teams}}
          <div class="team" id="sharedTeam">
            <h2 class="teamName">{{teams.name}}</h3>
            <div class="innerTeam">
              {{#each (loop 6)}}
                <div class="teamMember">
                  {{#if (memberExists ../teams.members @index)}}
                    <img width="475" src={{getMemberProp ../teams.members @index 'image'}} alt={{getMemberProp ../teams.members @index 'name'}} />
                    <h3>{{getMemberProp ../teams.members @index 'name'}}</h3>
                  {{else}}
                    <img width="475" src="/assets/img/transparent.gif" alt="Empty" />
                    <h3>Empty</h3>
                  {{/if}}
                </div>
              {{/each}}
            </div>
          </div>
      {{else}}
        <h3 class="emptyTeam">No Shared Teams Found</h3>
      {{/if}}
    </div>
  </section>
  <div id="porygonMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"><b>BZZT~! </b><span></span></span></h3><img id="team" src="/assets/img/porygonz.png" alt="team"/>
  </div>
</body>
</html>
